<section id="modal">
    <div id="card">
        
        <div id="head">
            <h2>Confirmação</h2>
            <a id="close" href="/tasks/<%= userId %>"><i class="bi bi-x"></i></a>
        </div>

        <hr>
        <p>Deseja realmente apagar a tarefa: <%= task.task %>?</p>
        <div id="btns">
            <a id="btnNot" href="/tasks/<%= userId %>">Não</a>
            <a id="btnYes" href="/tasks/deleteOne/<%= task._id %>/<%= userId %>">Sim</a>
        </div>
    </div>
</section>